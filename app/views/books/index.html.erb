<div class="col-md-12">
<p id="notice"><%= notice %></p>

<table class="table-bordered table-hover">
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.imageurl %>" class="img-responsive img-circle"></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price, unit: '¥', precision: 0) %></td>
        <td><%= book.publishing_company %></td>
        <td><%= book.release_date %></td>
        <td><%= book.ISBN %></td>
        <td><%= link_to '表示', book, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </xsody>
</table>

<br>

<%= link_to '新しい本を作成', new_book_path, class: "btn btn-primary btn-lg" %>
</divxs
